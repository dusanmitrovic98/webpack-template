{
  "name": "webpack-typescript-project",
  "version": "0.0.1",
  "description": "Modern Webpack TypeScript setup with Babel",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "dev": "webpack serve --mode development",
    "prod": "webpack --mode production",
    "type-check": "tsc --noEmit",
    "start": "node dist/bundle.js",
    "clean": "rm -rf dist",
    "lint": "eslint ./src/**/*.{ts,js}",
    "format": "prettier --write ./src/**/*.{ts,js}",
    "commit": "tsx .core/git/commit.ts",
    "push": "tsx .core/git/push.ts",
    "sync": "tsx .core/git/sync.ts",
    "git": "npm run commit && npm run push && npm run sync",
    "version:major": "tsx .core/version-bump.ts major",
    "version:minor": "tsx .core/version-bump.ts minor",
    "version:patch": "tsx .core/version-bump.ts patch",
    "rollback": "tsx .core/version-bump.ts rollback",
    "release:major": "npm run version:major && npm run git",
    "release:minor": "npm run version:minor && npm run git",
    "release:patch": "npm run version:patch && npm run git",
    "release": "npm run release:patch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.24.0",
    "@types/chalk": "^0.4.31",
    "@types/node": "^20.16.10",
    "@types/semver": "^7.5.8",
    "babel-loader": "^9.1.3",
    "chalk": "^5.3.0",
    "core-js": "^3.36.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "semver": "^7.6.3",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
