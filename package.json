{
  "name": "webpack-typescript-project",
  "version": "0.0.1",
  "description": "Modern Webpack TypeScript setup with Babel",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "npm run serve",
    "dev": "npm run format && tsx index.ts",
    "serve": "npm run build && webpack serve --open",
    "build": "npm run format && webpack && npm run copy-static-files",
    "build:dev": "npm run format && webpack --mode development && npm run copy-static-files",
    "build:prod": "npm run format && webpack --mode production && npm run copy-static-files",
    "watch": "npm run format && webpack --watch",
    "type-check": "npm run format && tsc --noEmit",
    "format": "prettier --write ./src/**/*.{ts,js}",
    "copy-static-files": "cp config.json dist/config.json && cp index.html dist/index.html",
    "clean:dist": "rm -rf dist",
    "clean:config": "tsx ./.core/clean-config.ts",
    "clean": "npm run clean:dist && npm run clean:config",
    "rename-app": "tsx ./.core/rename.ts",
    "env:dev": "tsx ./.core/set-environment.ts development",
    "env:prod": "tsx ./.core/set-environment.ts production",
    "env:toggle": "tsx ./.core/toggle-environment.ts",
    "env:check": "tsx ./.core/check-environment.ts",
    "commit": "tsx .core/git/commit.ts",
    "push": "tsx .core/git/push.ts",
    "sync": "tsx .core/git/sync.ts",
    "git": "npm run commit && npm run push && npm run sync",
    "version:major": "tsx .core/version-bump.ts major",
    "version:minor": "tsx .core/version-bump.ts minor",
    "version:patch": "tsx .core/version-bump.ts patch",
    "rollback": "tsx .core/version-bump.ts rollback",
    "release:major": "npm run version:major && npm run git",
    "release:minor": "npm run version:minor && npm run git",
    "release:patch": "npm run version:patch && npm run git",
    "release": "npm run release:patch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.24.0",
    "@types/chalk": "^2.2.0",
    "@types/node": "^22.7.5",
    "@types/semver": "^7.5.8",
    "babel-loader": "^9.1.3",
    "chalk": "^5.3.0",
    "core-js": "^3.36.0",
    "eslint": "^9.12.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "prettier": "^3.3.3",
    "semver": "^7.6.3",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "browserfs": "^1.4.3",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^16.4.5",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0"
  }
}
